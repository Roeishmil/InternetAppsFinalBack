{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "sourceMap": true,
      "moduleResolution": "node",
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": [
      "node_modules",
      "./src/test",
    ]
  }